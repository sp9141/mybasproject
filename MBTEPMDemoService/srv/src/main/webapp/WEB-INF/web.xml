<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <filter>
        <filter-name>MustBeAuthenticated</filter-name>
        <filter-class>com.sap.cloud.server.odata.MustBeAuthenticated</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MustBeAuthenticated</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <login-config>
        <auth-method>XSUAA</auth-method>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>MainServlet-allow</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AdminMetrics-allow</web-resource-name>
            <url-pattern>/admin/metrics/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ServerAdministrator</role-name>
            <role-name>ViewMetrics</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>LicenseCheck-allow</web-resource-name>
            <url-pattern>/license/check/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-role>
        <role-name>CacheAdministrator</role-name>
    </security-role>
    <security-role>
        <role-name>Everyone</role-name>
    </security-role>
    <security-role>
        <role-name>ServerAdministrator</role-name>
    </security-role>
    <security-role>
        <role-name>ViewMetrics</role-name>
    </security-role>
</web-app>
